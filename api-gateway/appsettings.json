{
    "Jwt": {
        "Issuer": "",
        "Audience": "",
        "Key": "",
        "AccessTokenExpiryMinutes": 30
    },

    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": {
                    "Path": "/auth/{**catch-all}"
                }
            },
            "product-route": {
                "ClusterId": "product-cluster",
                "Match": {
                    "Path": "/products/{**catch-all}"
                }
            },
            "cart-route": {
                "ClusterId": "cart-cluster",
                "Match": {
                    "Path": "/cart/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "auth-service": {
                        "Address": "http://authservice-api:8080/"
                    }
                }
            },
            "product-cluster": {
                "Destinations": {
                    "product-service": {
                        "Address": "http://productservice-api:8080/"
                    }
                }
            },
            "cart-cluster": {
                "Destinations": {
                    "cart-service": {
                        "Address": "http://cartservice-api:8080/"
                    }
                }
            }
        }
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information"
        }
    },

    "AllowedHosts": "*"
}
